<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/precaution_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.PrecautionFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/precautionToolbar"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingLeft="24dp"
        android:gravity=""
        android:minHeight="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/preBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:src="@drawable/ic_arrow_back_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precautions"
                android:layout_marginTop="58dp"
                android:textColor="#fff"
                android:textSize="36sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/precautionViewPager"
        android:layout_width="match_parent"
        android:padding="24dp"
        android:background="@null"
        android:layout_gravity="center"
        android:layout_height="525dp"
        android:clipToPadding="false"
        android:overScrollMode="never"/>
</LinearLayout>